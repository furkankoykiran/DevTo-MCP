{
  "name": "devto-mcp",
  "version": "1.0.1",
  "description": "A Model Context Protocol (MCP) server for the DEV Community (Forem) API. Manage articles, comments, users, tags, and more through MCP-compatible clients.",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "devto-mcp": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "devto",
    "dev-community",
    "forem",
    "api",
    "articles",
    "blog",
    "ai",
    "llm",
    "claude",
    "cursor"
  ],
  "author": "Furkan Köykıran",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/furkankoykiran/DevTo-MCP.git"
  },
  "bugs": {
    "url": "https://github.com/furkankoykiran/DevTo-MCP/issues"
  },
  "homepage": "https://github.com/furkankoykiran/DevTo-MCP#readme",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "zod": "^3.23.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/node": "^22.0.0",
    "eslint": "^9.0.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.0.0",
    "vitest": "^4.0.18"
  }
}